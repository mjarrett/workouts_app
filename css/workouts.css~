a.topnav:link {
    text-decoration: none;
    color: #000000;

}

/* visited link */
a.topnav:visited {
    text-decoration: none;
    color: #000000;

}

/* mouse over link */
a.topnav:hover {
    text-decoration: none;
    color: #663366;

}

/* selected link */
a.topnav:active {
    text-decoration: none;    
    color: #663366;
}

